---
// Import si Pawang Link
import BaseLink from './BaseLink.astro';
---

<header class="bg-charcoal/95 backdrop-blur-sm border-b border-metallic-silver/20 sticky top-0 z-40">
  <nav class="container mx-auto px-4 py-4" role="navigation" aria-label="Main navigation">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-2">
        <BaseLink href="/" class="flex items-center space-x-2 hover:opacity-80 transition-opacity" aria-label="Raja Metal Cutting - Beranda">
          <div class="w-10 h-10 bg-laser-red rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2L2 7v10c0 5.55 3.84 9.739 9 11 5.16-1.261 9-5.45 9-11V7l-10-5z"/>
            </svg>
          </div>
          <span class="text-xl font-bold text-pure-white">Raja Metal Cutting</span>
        </BaseLink>
      </div>

      <div class="hidden md:flex items-center space-x-8">
        <BaseLink href="/" class="text-metallic-silver hover:text-pure-white transition-colors font-medium">Beranda</BaseLink>
        <div class="relative group">
          <button class="text-metallic-silver hover:text-pure-white transition-colors font-medium flex items-center">
            Layanan <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
          </button>
          <div class="absolute top-full left-0 mt-2 w-72 bg-charcoal border border-metallic-silver/20 rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
            <div class="p-2">
              <BaseLink href="/jasa-cnc-router" class="block px-4 py-2 text-metallic-silver hover:text-pure-white hover:bg-metallic-silver/10 rounded transition-colors">Jasa CNC Router</BaseLink>
              <BaseLink href="/jasa-cnc-laser-cutting-co2" class="block px-4 py-2 text-metallic-silver hover:text-pure-white hover:bg-metallic-silver/10 rounded transition-colors">Jasa CNC Laser Cutting CO₂</BaseLink>
              <BaseLink href="/jasa-laser-cutting-fiber-metal" class="block px-4 py-2 text-metallic-silver hover:text-pure-white hover:bg-metallic-silver/10 rounded transition-colors">Jasa Laser Cutting Fiber Metal</BaseLink>
              <BaseLink href="/jasa-galvo-30-watt" class="block px-4 py-2 text-metallic-silver hover:text-pure-white hover:bg-metallic-silver/10 rounded transition-colors">Jasa Galvo 30 Watt</BaseLink>
            </div>
          </div>
        </div>
        <div class="relative group">
           <button class="text-metallic-silver hover:text-pure-white transition-colors font-medium flex items-center">
            Material <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
          </button>
          <div class="absolute top-full left-0 mt-2 w-72 bg-charcoal border border-metallic-silver/20 rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
            <div class="p-2">
              <BaseLink href="/material/acp" class="block px-4 py-2 text-metallic-silver hover:text-pure-white hover:bg-metallic-silver/10 rounded transition-colors">ACP (Aluminum Composite Panel)</BaseLink>
              <BaseLink href="/material/stainless-steel-metal" class="block px-4 py-2 text-metallic-silver hover:text-pure-white hover:bg-metallic-silver/10 rounded transition-colors">Stainless Steel & Metal</BaseLink>
              <BaseLink href="/material/pvc" class="block px-4 py-2 text-metallic-silver hover:text-pure-white hover:bg-metallic-silver/10 rounded transition-colors">PVC Sheets</BaseLink>
              <BaseLink href="/material/acrylic" class="block px-4 py-2 text-metallic-silver hover:text-pure-white hover:bg-metallic-silver/10 rounded transition-colors">Acrylic/Perspex</BaseLink>
              <BaseLink href="/material/ply-wood-multiplex" class="block px-4 py-2 text-metallic-silver hover:text-pure-white hover:bg-metallic-silver/10 rounded transition-colors">Plywood & Multiplex</BaseLink>
              <BaseLink href="/material/grc" class="block px-4 py-2 text-metallic-silver hover:text-pure-white hover:bg-metallic-silver/10 rounded transition-colors">GRC (Glass Reinforced Concrete)</BaseLink>
           </div>
          </div>
        </div>
        <BaseLink href="/projects" class="text-metallic-silver hover:text-pure-white transition-colors font-medium">Portfolio</BaseLink>
        <BaseLink href="/blog" class="text-metallic-silver hover:text-pure-white transition-colors font-medium">Blog</BaseLink>
        <BaseLink href="/kontak" class="text-metallic-silver hover:text-pure-white transition-colors font-medium">Kontak</BaseLink>
        <a 
          href="https://wa.me/6281380529998" 
          target="_blank" 
          rel="noopener noreferrer"
          class="bg-laser-red hover:bg-red-600 text-white px-6 py-2 rounded-lg font-semibold transition-colors"
          aria-label="Dapatkan Estimasi Biaya Kilat"
        >
          Estimasi Kilat
        </a>
      </div>

      <button 
        class="md:hidden text-metallic-silver hover:text-pure-white"
        aria-label="Toggle mobile menu"
        id="mobile-menu-button"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
      </button>
    </div>

    <div class="md:hidden mt-4 hidden" id="mobile-menu">
      <div class="flex flex-col space-y-2 pb-4">
         <BaseLink href="/" class="text-metallic-silver hover:text-pure-white transition-colors py-2">Beranda</BaseLink>
        <div class="border-l-2 border-laser-red pl-4 ml-2">
          <p class="text-pure-white font-medium mb-2">Layanan</p>
          <BaseLink href="/jasa-cnc-router" class="block text-metallic-silver hover:text-pure-white transition-colors py-1">Jasa CNC Router</BaseLink>
          <BaseLink href="/jasa-cnc-laser-cutting-co2" class="block text-metallic-silver hover:text-pure-white transition-colors py-1">Jasa CNC Laser Cutting CO₂</BaseLink>
          <BaseLink href="/jasa-laser-cutting-fiber-metal" class="block text-metallic-silver hover:text-pure-white transition-colors py-1">Jasa Laser Cutting Fiber Metal</BaseLink>
           <BaseLink href="/jasa-galvo-30-watt" class="block text-metallic-silver hover:text-pure-white transition-colors py-1">Jasa Galvo 30 Watt</BaseLink>
        </div>
        <div class="border-l-2 border-laser-red pl-4 ml-2">
          <p class="text-pure-white font-medium mb-2">Material</p>
          <BaseLink href="/material/acp" class="block text-metallic-silver hover:text-pure-white transition-colors py-1">ACP (Aluminum Composite Panel)</BaseLink>
          <BaseLink href="/material/stainless-steel-metal" class="block text-metallic-silver hover:text-pure-white transition-colors py-1">Stainless Steel & Metal</BaseLink>
         <BaseLink href="/material/pvc" class="block text-metallic-silver hover:text-pure-white transition-colors py-1">PVC Sheets</BaseLink>
          <BaseLink href="/material/acrylic" class="block text-metallic-silver hover:text-pure-white transition-colors py-1">Acrylic/Perspex</BaseLink>
          <BaseLink href="/material/ply-wood-multiplex" class="block text-metallic-silver hover:text-pure-white transition-colors py-1">Plywood & Multiplex</BaseLink>
          <BaseLink href="/material/grc" class="block text-metallic-silver hover:text-pure-white transition-colors py-1">GRC (Glass Reinforced Concrete)</BaseLink>
        </div>
        <BaseLink href="/projects" class="text-metallic-silver hover:text-pure-white transition-colors py-2">Portfolio</BaseLink>
         <BaseLink href="/blog" class="text-metallic-silver hover:text-pure-white transition-colors py-2">Blog</BaseLink>
        <BaseLink href="/kontak" class="text-metallic-silver hover:text-pure-white transition-colors py-2">Kontak</BaseLink>
        <a 
          href="https://wa.me/6281380529998" 
          target="_blank" 
          rel="noopener noreferrer"
          class="bg-laser-red hover:bg-red-600 text-white px-6 py-2 rounded-lg font-semibold transition-colors text-center mt-4"
          aria-label="Dapatkan Estimasi Biaya Kilat"
        >
          Estimasi Kilat
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>