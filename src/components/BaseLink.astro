---
// src/components/BaseLink.astro

export interface Props {
  href: string;
  class?: string;
  [key: string]: any; // Nangkep semua properti lain kayak aria-label, dll.
}

const { href, class: className, ...rest } = Astro.props;

// INI KODE YANG BENER PAKE CARA RESMI ASTRO.
// Astro.resolve() secara otomatis akan nambahin base path.
const resolvedHref = Astro.resolve(href);
---

<a href={resolvedHref} class:list={[className]} {...rest}>
  <slot />
</a>