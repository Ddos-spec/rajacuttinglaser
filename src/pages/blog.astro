            <button class="category-btn bg-charcoal border border-metallic-silver/20 text-metallic-silver hover:text-pure-white hover:border-laser-red/50 px-6 py-2 rounded-lg font-medium transition-all duration-300" data-category="technology">
              Teknologi
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Article -->
    <section class="py-20 bg-charcoal">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-2xl font-bold text-laser-red mb-2">Artikel Pilihan</h2>
        </div>
        
