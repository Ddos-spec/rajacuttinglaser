---
// src/pages/material/pvc.astro
// Makin deket ke garis finish.

import Layout from '@/layouts/Layout.astro';
import MaterialDetail from '@/components/MaterialDetail.astro';
import { MATERIALS, SITE_CONFIG } from '@/utils/constants.js';

// 1. Ambil data spesifik untuk PVC dari pusat data
const material = MATERIALS.find(m => m.id === 'pvc');

// 2. Jika data tidak ditemukan, alihkan ke halaman 404
if (!material) {
  return Astro.redirect('/404');
}
---

<Layout
  title={`${material.title} | ${SITE_CONFIG.name}`}
  description={material.description}
  keywords={material.keywords}
>
  <MaterialDetail material={material} />
</Layout>