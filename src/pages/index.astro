---
// src/pages/index.astro
import BaseLayout from '../components/BaseLayout.astro';
import { SITE_CONFIG, SERVICES, PROJECTS } from '../utils/constants.js';
---

<BaseLayout
  title={SITE_CONFIG.name + ' - ' + SITE_CONFIG.tagline}
  description={SITE_CONFIG.description}
  keywords={SITE_CONFIG.keywords}
>
  <!-- Hero Section -->
  <section class="relative py-20 bg-gradient-to-br from-charcoal via-charcoal/95 to-charcoal/90 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-r from-charcoal/50 to-transparent z-10"></div>
    <div class="container mx-auto px-4 relative z-20 grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div>
        <h1 class="text-4xl md:text-6xl font-bold text-pure-white mb-6 leading-tight">
          {SITE_CONFIG.hero.title}
        </h1>
        <p class="text-xl md:text-2xl text-metallic-silver mb-4 leading-relaxed">
          {SITE_CONFIG.hero.subtitle}
        </p>
        <p class="text-lg text-metallic-silver mb-8 leading-relaxed">
          {SITE_CONFIG.hero.text}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 mb-8">
          <a
            href={SITE_CONFIG.cta.link1.startsWith('/') ? `${import.meta.env.BASE_URL}${SITE_CONFIG.cta.link1.substring(1)}` : SITE_CONFIG.cta.link1}
            class="bg-laser-red hover:bg-red-600 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 hover:scale-105 shadow-lg text-center"
          >
            {SITE_CONFIG.cta.label1}
          </a>
          <a
            href={SITE_CONFIG.cta.link2.startsWith('/') ? `${import.meta.env.BASE_URL}${SITE_CONFIG.cta.link2.substring(1)}` : SITE_CONFIG.cta.link2}
            class="border-2 border-pure-white text-pure-white hover:bg-pure-white hover:text-charcoal px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 text-center"
          >
            {SITE_CONFIG.cta.label2}
          </a>
        </div>
      </div>
      <div class="relative">
        <img src={SITE_CONFIG.hero.image} alt={SITE_CONFIG.hero.imageAlt} class="w-full rounded-lg shadow-2xl" loading="eager" />
        <div class="absolute -bottom-4 -right-4 bg-laser-red text-white p-4 rounded-lg shadow-lg">
          <div class="text-2xl font-bold">{SITE_CONFIG.hero.badge.title}</div>
          <div class="text-sm">{SITE_CONFIG.hero.badge.subtitle}</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-20 bg-charcoal">
    <div class="container mx-auto px-4 text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-pure-white mb-4">{SITE_CONFIG.why.title}</h2>
      <p class="text-lg text-metallic-silver max-w-2xl mx-auto">{SITE_CONFIG.why.subtitle}</p>
    </div>
    <div class="container mx-auto px-4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {SITE_CONFIG.why.items.map(item => (
        <div class="text-center">
          <div class="w-16 h-16 bg-laser-red/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-metallic-silver" fill="currentColor" viewBox="0 0 24 24">
              <path d={item.iconPath} />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-pure-white mb-3">{item.title}</h3>
          <p class="text-metallic-silver">{item.text}</p>
        </div>
      ))}
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-20 bg-gradient-to-b from-charcoal to-charcoal/95">
    <div class="container mx-auto px-4 text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-pure-white mb-4">Layanan Unggulan</h2>
      <p class="text-lg text-metallic-silver max-w-2xl mx-auto">Solusi cutting presisi untuk semua kebutuhan kreatif dan industri Anda</p>
    </div>
    <div class="container mx-auto px-4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {SERVICES.map(s => (
        <div class="bg-charcoal border border-metallic-silver/20 rounded-lg p-6 hover:border-laser-red/50 transition-all duration-300 group">
          <div class="w-12 h-12 bg-laser-red/20 rounded-lg flex items-center justify-center mb-4 group-hover:bg-laser-red/30 transition-colors">
            <svg class="w-6 h-6 text-laser-red" fill="currentColor" viewBox="0 0 24 24">
              <path d={s.iconPath} />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-pure-white mb-3">{s.name}</h3>
          <p class="text-metallic-silver mb-4">{s.shortDescription}</p>
          <a href={s.url}>Pelajari Lebih Lanjut →</a>
        </div>
      ))}
    </div>
  </section>

  <!-- Portfolio Teaser -->
  <section class="py-20 bg-charcoal">
    <div class="container mx-auto px-4 text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-pure-white mb-4">Karya Terbaru Kami</h2>
      <p class="text-lg text-metallic-silver max-w-2xl mx-auto">Lihat hasil kerja terbaru yang telah kami selesaikan</p>
    </div>
    <div class="container mx-auto px-4 grid grid-cols-1 md:grid-cols-3 gap-8">
      {PROJECTS.slice(0,3).map(p => (
        <div class="group">
          <div class="relative overflow-hidden rounded-lg">
            <img src={p.image} alt={p.alt} class="w-full h-64 object-cover transition-transform duration-300 group-hover:scale-110" loading="lazy" />
            <div class="absolute inset-0 bg-gradient-to-t from-charcoal/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="absolute bottom-4 left-4 right-4">
                <h3 class="text-lg font-semibold text-pure-white mb-1">{p.title}</h3>
                <p class="text-metallic-silver text-sm">{p.caption}</p>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
    <div class="text-center mt-12">
      <a href={`${import.meta.env.BASE_URL}portfolio`} class="bg-laser-red hover:bg-red-600 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 hover:scale-105 shadow-lg">Lihat Semua Portfolio</a>
    </div>
  </section>

  <!-- Blog Teaser -->
  <section class="py-20 bg-gradient-to-b from-charcoal/95 to-charcoal">
    <div class="container mx-auto px-4 text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-pure-white mb-4">Dari Jurnal Perang Kami</h2>
      <p class="text-lg text-metallic-silver max-w-2xl mx-auto">Tips, trik, dan insight dari para ahli laser cutting</p>
    </div>
    <div class="container mx-auto px-4 grid grid-cols-1 md:grid-cols-3 gap-8">
      {BLOG_POSTS.slice(0,3).map(post => (
        <div class="bg-charcoal border border-metallic-silver/20 rounded-lg p-6 hover:border-laser-red/50 transition-all duration-300">
          <div class="text-sm text-laser-red font-medium mb-2">{post.categoryLabel}</div>
          <h3 class="text-xl font-semibold text-pure-white mb-3">
            <a href={`${import.meta.env.BASE_URL}${post.url}`} class="hover:text-metallic-silver transition-colors">{post.title}</a>
          </h3>
          <p class="text-metallic-silver mb-4">{post.excerpt}</p>
          <div class="text-sm text-metallic-silver">{post.readTime} menit baca • {post.date}</div>
        </div>
      ))}
    </div>
    <div class="text-center mt-12">
      <a href={`${import.meta.env.BASE_URL}blog`} class="border-2 border-pure-white text-pure-white hover:bg-pure-white hover:text-charcoal px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300">Baca Semua Artikel</a>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-20 bg-gradient-to-r from-laser-red to-red-600">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Siap Wujudkan Proyek Impian Anda?</h2>
      <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">Konsultasikan kebutuhan laser cutting Anda dengan tim ahli kami. Dapatkan estimasi biaya dan timeline yang akurat.</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href={`https://wa.me/${SITE_CONFIG.whatsapp}?text=Halo%20Raja%20Metal%20Cutting,%20saya%20ingin%20konsultasi%20untuk%20proyek%20laser%20cutting`} target="_blank" rel="noopener noreferrer" class="bg-white text-laser-red hover:bg-gray-100 px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 hover:scale-105 shadow-lg min-w-[280px]">Konsultasi Gratis Sekarang</a>
        <a href={`${import.meta.env.BASE_URL}kontak`} class="border-2 border-white text-white hover:bg-white hover:text-laser-red px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 min-w-[280px]">Hubungi Kami</a>
      </div>
    </div>
  </section>
</BaseLayout>
