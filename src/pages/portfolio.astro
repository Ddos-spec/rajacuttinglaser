---
// src/pages/portfolio.astro
import BaseLayout from '../components/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CTA from '../components/CTA.astro';
import { SITE_CONFIG, PORTFOLIO_PROJECTS } from '../utils/constants.js';

const portfolioProjects = PORTFOLIO_PROJECTS;

// Meta tags untuk SEO
const metaTags = {
  title: "Portfolio Proyek Laser Cutting | jasa cutting laser - Hasil Berkualitas Tinggi",
  description: "Lihat hasil kerja profesional kami dalam berbagai proyek laser cutting, CNC router, dan engraving. Lebih dari 1000+ proyek berhasil diselesaikan dengan kualitas premium.",
  keywords: "portfolio laser cutting, hasil kerja laser cutting, proyek cnc router, galeri laser engraving, contoh hasil cutting, showcase laser cutting",
  canonical: new URL('/portfolio/', Astro.site).href
};

// Define color classes for categories
const categoryColors: { [key: string]: string } = {
  'Laser Fiber': 'bg-blue-600',
  'Laser CO2': 'bg-green-600', 
  'CNC Router': 'bg-purple-600',
  'Galvo Engraving': 'bg-orange-600'
};
---

<BaseLayout 
  title={metaTags.title}
  description={metaTags.description}
  url={metaTags.canonical}
>
  <Header slot="header" />
  
  <main>
    <!-- Portfolio Hero Section -->
    <section class="section-padding bg-laser-green text-white">
      <div class="container-custom">
        <div class="text-center">
          <div class="inline-flex items-center px-6 py-3 bg-white/10 border border-white/20 rounded-full text-white font-semibold text-sm mb-6">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            Hasil Karya Terbaik
          </div>
          <h1 class="heading-xl mb-8 text-white">Portfolio Hasil Kerja Kami</h1>
          <p class="text-xl text-blue-100 max-w-4xl mx-auto leading-relaxed">
            Lihat berbagai proyek laser cutting, CNC router, dan engraving yang telah kami selesaikan dengan kualitas tinggi dan presisi sempurna untuk klien di seluruh Indonesia.
          </p>
        </div>
      </div>
    </section>

    <!-- Breadcrumb -->
    <section class="py-4 bg-gray-50">
      <div class="container-custom">
        <nav class="flex" aria-label="Breadcrumb">
          <ol class="inline-flex items-center space-x-1 md:space-x-3">
            <li class="inline-flex items-center">
              <a href="/" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600 transition-colors duration-300">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                </svg>
                Beranda
              </a>
            </li>
            <li aria-current="page">
              <div class="flex items-center">
                <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">Portfolio</span>
              </div>
            </li>
          </ol>
        </nav>
      </div>
    </section>

    <!-- Portfolio Filter -->
    <section class="py-8 bg-white">
      <div class="container-custom">
        <div class="flex flex-wrap justify-center gap-4" id="portfolio-filters">
          <button class="filter-btn active inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-600 to-blue-700 text-white font-semibold rounded-xl shadow-lg hover:from-blue-700 hover:to-blue-800 hover:shadow-xl transform hover:scale-105 transition-all duration-300" data-filter="all">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            Semua Proyek
          </button>
          <button class="filter-btn inline-flex items-center px-6 py-3 bg-white text-gray-700 font-semibold rounded-xl shadow-lg border border-gray-200 hover:bg-gradient-to-r hover:from-blue-600 hover:to-blue-700 hover:text-white hover:shadow-xl transform hover:scale-105 transition-all duration-300" data-filter="laser-fiber">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            Laser Fiber
          </button>
          <button class="filter-btn inline-flex items-center px-6 py-3 bg-white text-gray-700 font-semibold rounded-xl shadow-lg border border-gray-200 hover:bg-gradient-to-r hover:from-green-600 hover:to-green-700 hover:text-white hover:shadow-xl transform hover:scale-105 transition-all duration-300" data-filter="laser-co2">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
            </svg>
            Laser CO2
          </button>
          <button class="filter-btn inline-flex items-center px-6 py-3 bg-white text-gray-700 font-semibold rounded-xl shadow-lg border border-gray-200 hover:bg-gradient-to-r hover:from-purple-600 hover:to-purple-700 hover:text-white hover:shadow-xl transform hover:scale-105 transition-all duration-300" data-filter="cnc-router">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            CNC Router
          </button>
          <button class="filter-btn inline-flex items-center px-6 py-3 bg-white text-gray-700 font-semibold rounded-xl shadow-lg border border-gray-200 hover:bg-gradient-to-r hover:from-orange-600 hover:to-orange-700 hover:text-white hover:shadow-xl transform hover:scale-105 transition-all duration-300" data-filter="galvo-engraving">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
            </svg>
            Galvo Engraving
          </button>
        </div>
      </div>
    </section>

    <!-- Portfolio Grid -->
    <section class="section-padding bg-gray-50">
      <div class="container-custom">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="portfolio-grid">
          {portfolioProjects.map((project) => (
            <article class="portfolio-item group bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-3 flex flex-col overflow-hidden border border-gray-200" data-category={project.category.toLowerCase().replace(' ', '-')}>
              <div class="relative overflow-hidden">
                <img 
                  src={project.image} 
                  alt={project.title}
                  class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-700"
                  loading="lazy"
                  width="400"
                  height="256"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                
                <!-- Category Badge -->
                <div class="absolute top-4 left-4">
                  <span class={`${categoryColors[project.category]} text-white px-3 py-1 rounded-full text-sm font-semibold shadow-lg`}>
                    {project.category}
                  </span>
                </div>
                
                <!-- View Detail Button Overlay -->
                <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-500">
                  <button class="view-detail-btn bg-white/90 backdrop-blur-sm text-gray-900 font-semibold px-6 py-3 rounded-xl shadow-xl hover:bg-white transform hover:scale-105 transition-all duration-300" data-project-id={project.id}>
                    <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                    Lihat Detail
                  </button>
                </div>
              </div>
              
              <div class="p-8 flex flex-col flex-grow">
                <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors duration-300">
                  {project.title}
                </h3>
                <p class="text-gray-600 mb-6 text-sm leading-relaxed flex-grow">
                  {project.description}
                </p>
                
                <!-- Project Details -->
                <div class="space-y-3 mb-6">
                  <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                    <span class="text-sm font-medium text-gray-600">Client:</span>
                    <span class="text-sm font-bold text-gray-900">{project.client}</span>
                  </div>
                  <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                    <span class="text-sm font-medium text-gray-600">Material:</span>
                    <span class="text-sm font-bold text-gray-900">{project.material}</span>
                  </div>
                  <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                    <span class="text-sm font-medium text-gray-600">Teknik:</span>
                    <span class="text-sm font-bold text-gray-900">{project.technique}</span>
                  </div>
                </div>
                
                <!-- Action Button -->
                <div class="mt-auto">
                  <button class="view-detail-btn group/btn inline-flex items-center justify-center w-full bg-gradient-to-r from-blue-600 to-blue-700 text-white font-semibold px-6 py-4 rounded-xl transition-all duration-300 hover:from-blue-700 hover:to-blue-800 hover:shadow-lg transform hover:scale-105" data-project-id={project.id}>
                    <span class="flex items-center justify-center">
                      Lihat Detail Proyek
                      <svg class="w-4 h-4 ml-2 group-hover/btn:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    </span>
                  </button>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <CTA 
      title="Siap Mulai Proyek Anda?"
      description="Konsultasikan kebutuhan laser cutting Anda dengan tim ahli kami. Dapatkan penawaran terbaik dan hasil berkualitas tinggi."
      primaryText="Konsultasi Gratis"
      primaryLink={`https://api.whatsapp.com/send?phone=${SITE_CONFIG.whatsapp}&text=Halo,%20saya%20tertarik%20dengan%20jasa%20laser%20cutting%20setelah%20melihat%20portfolio%20Anda.`}
      secondaryText="Hubungi Kami"
      secondaryLink="/contact/"
    />
  </main>

  <Footer slot="footer" />

  <!-- Portfolio Detail Modal -->
  <div id="portfolio-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 overflow-y-auto">
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="bg-white rounded-2xl shadow-2xl max-w-4xl w-full max-h-screen overflow-y-auto">
        <!-- Modal Header -->
        <div class="flex justify-between items-center p-8 border-b border-gray-200">
          <h2 id="modal-title" class="text-2xl font-bold text-gray-900"></h2>
          <button id="close-modal" class="text-gray-400 hover:text-gray-600 transition-colors p-2 hover:bg-gray-100 rounded-full">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        
        <!-- Modal Content -->
        <div class="p-8">
          <!-- Image Gallery -->
          <div class="mb-8">
            <div class="relative">
              <img id="modal-main-image" src="" alt="" class="w-full h-80 object-cover rounded-xl shadow-lg">
              <div class="absolute inset-0 bg-black bg-opacity-0 hover:bg-opacity-10 transition-all duration-300 rounded-xl flex items-center justify-center opacity-0 hover:opacity-100">
                <button id="expand-image" class="bg-white bg-opacity-90 p-3 rounded-full hover:bg-opacity-100 transition-all shadow-lg">
                  <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"></path>
                  </svg>
                </button>
              </div>
            </div>
            
            <!-- Thumbnail Gallery -->
            <div id="thumbnail-gallery" class="flex gap-3 mt-6 overflow-x-auto pb-2">
              <!-- Thumbnails will be inserted here -->
            </div>
          </div>
          
          <!-- Project Details -->
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Detail Proyek</h3>
              <div class="space-y-4">
                <div class="flex justify-between items-center p-4 bg-gray-50 rounded-xl">
                  <span class="text-gray-600 font-medium">Client:</span>
                  <span id="modal-client" class="font-bold text-gray-900"></span>
                </div>
                <div class="flex justify-between items-center p-4 bg-gray-50 rounded-xl">
                  <span class="text-gray-600 font-medium">Material:</span>
                  <span id="modal-material" class="font-bold text-gray-900"></span>
                </div>
                <div class="flex justify-between items-center p-4 bg-gray-50 rounded-xl">
                  <span class="text-gray-600 font-medium">Teknik:</span>
                  <span id="modal-technique" class="font-bold text-gray-900"></span>
                </div>
                <div class="flex justify-between items-center p-4 bg-gray-50 rounded-xl">
                  <span class="text-gray-600 font-medium">Kategori:</span>
                  <span id="modal-category" class="font-bold text-blue-600"></span>
                </div>
              </div>
            </div>
            
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Deskripsi</h3>
              <p id="modal-description" class="text-gray-600 leading-relaxed bg-gray-50 p-4 rounded-xl"></p>
            </div>
          </div>
          
          <!-- Contact CTA -->
          <div class="mt-8 p-6 bg-gradient-to-r from-green-50 to-blue-50 rounded-2xl border border-green-200">
            <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
              <div>
                <h4 class="font-bold text-gray-900 text-lg">Tertarik dengan proyek serupa?</h4>
                <p class="text-gray-600">Konsultasikan kebutuhan Anda dengan tim ahli kami</p>
              </div>
              <a href={`https://api.whatsapp.com/send?phone=${SITE_CONFIG.whatsapp}&text=Halo,%20saya%20tertarik%20dengan%20proyek%20laser%20cutting%20serupa.`}
                 target="_blank" 
                 rel="noopener noreferrer"
                 class="inline-flex items-center justify-center bg-gradient-to-r from-green-600 to-green-700 text-white font-semibold px-8 py-3 rounded-xl shadow-lg hover:from-green-700 hover:to-green-800 hover:shadow-xl transform hover:scale-105 transition-all duration-300">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
                </svg>
                Konsultasi Sekarang
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Image Lightbox Modal -->
  <div id="image-lightbox" class="fixed inset-0 bg-black bg-opacity-90 hidden z-60">
    <div class="relative max-w-screen-lg max-h-screen p-4 flex items-center justify-center">
      <img id="lightbox-image" src="" alt="" class="max-w-full max-h-full object-contain rounded-lg">
      <button id="close-lightbox" class="absolute top-4 right-4 text-white hover:text-gray-300 transition-colors p-2 hover:bg-white/10 rounded-full">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
  </div>
</BaseLayout>

<!-- Portfolio Filter & Modal Script -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Portfolio Filter Functionality
  const filterBtns = document.querySelectorAll('.filter-btn');
  const portfolioItems = document.querySelectorAll('.portfolio-item') as NodeListOf<HTMLElement>;

  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      // Remove active class from all buttons
      filterBtns.forEach(b => {
        b.classList.remove('active');
        b.classList.remove('bg-gradient-to-r', 'from-blue-600', 'to-blue-700', 'text-white');
        b.classList.add('bg-white', 'text-gray-700', 'border', 'border-gray-200');
      });
      
      // Add active class to clicked button
      btn.classList.add('active');
      btn.classList.add('bg-gradient-to-r', 'from-blue-600', 'to-blue-700', 'text-white');
      btn.classList.remove('bg-white', 'text-gray-700', 'border', 'border-gray-200');

      const filterValue = btn.getAttribute('data-filter');

      portfolioItems.forEach(item => {
        if (filterValue === 'all' || item.getAttribute('data-category') === filterValue) {
          item.style.display = 'block';
          setTimeout(() => {
            item.style.opacity = '1';
            item.style.transform = 'scale(1) translateY(0)';
          }, 10);
        } else {
          item.style.opacity = '0';
          item.style.transform = 'scale(0.8) translateY(20px)';
          setTimeout(() => {
            item.style.display = 'none';
          }, 300);
        }
      });
    });
  });

  // Portfolio projects data for modal
  const portfolioData = [
    {
      id: 1,
      title: "Cutting Plat Besi Custom",
      category: "Laser Fiber",
      client: "PT. Industri Manufaktur",
      material: "Plat Besi 5mm",
      technique: "Laser Fiber Cutting",
      gallery: [
        "/jasalasercutting/portfolio/metal.webp",
        "/jasalasercutting/portfolio/metal.webp",
        "/jasalasercutting/portfolio/metal.webp"
      ],
      detailDescription: "Proyek pemotongan plat besi custom dengan ketebalan 5mm menggunakan teknologi laser fiber. Hasil potongan sangat presisi dengan toleransi ±0.1mm, cocok untuk komponen industri yang membutuhkan akurasi tinggi."
    },
    {
      id: 2,
      title: "Engraving Logo Perusahaan",
      category: "Galvo Engraving",
      client: "CV. Karya Mandiri",
      material: "Stainless Steel",
      technique: "Galvo Laser Engraving",
      gallery: [
        "/jasalasercutting/portfolio/engraving.webp",
        "/jasalasercutting/portfolio/engraving.webp",
        "/jasalasercutting/portfolio/engraving.webp"
      ],
      detailDescription: "Engraving logo perusahaan dengan teknologi galvo laser pada material stainless steel. Hasil engraving sangat detail dan tahan lama, cocok untuk branding perusahaan yang berkualitas tinggi."
    },
    {
      id: 3,
      title: "Cutting Akrilik Dekoratif",
