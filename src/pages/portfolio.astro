        const currentSrc = img.getAttribute('src');
        if (currentSrc) {
          const fixedSrc = getCorrectImagePath(currentSrc);
          if (fixedSrc !== currentSrc) {
            img.src = fixedSrc;
          }
        }
        
        // Also fix the onerror attribute
        const errorFallback = getCorrectImagePath('placeholder.webp');
        img.onerror = function() {
