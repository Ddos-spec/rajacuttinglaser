      }
    }

    function closeModal() {
      if (modal) {
        modal.style.opacity = '0';
        setTimeout(() => {
          modal.classList.add('hidden');
          document.body.style.overflow = 'auto';
        }, 300);
      }
    }

    // Event listeners for modal buttons
    const modalButtons = document.querySelectorAll('.modal-btn');
    modalButtons.forEach(btn => {
