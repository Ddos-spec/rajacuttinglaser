---
import BaseLayout from '../../components/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import WhatsAppButton from '../../components/WhatsAppButton.astro';
import { generateBlogPostSchema, generateBreadcrumbSchema } from '../../utils/seo';
import { getCollection } from 'astro:content';

/**
 * Detail blog page hanya menggunakan Content Collections.
 * Fallback BLOG_POSTS sudah dihapus sesuai instruksi.
 */

type PostView = {
  title: string;
  slug: string;
  excerpt?: string;
  category?: string;
  image?: string;
  publishDate?: string | Date;
  readTime?: string;
  author?: string;
};

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft);
  return posts.map((p) => ({ params: { slug: p.slug } }));
}

const paramSlug = Astro.params.slug as string;

const collectionPosts = await getCollection('blog', ({ data }) => !data.draft);
const collectionEntry = collectionPosts.find((p) => p.slug === paramSlug);

if (!collectionEntry) {
  throw new Error(`Blog post not found for slug: ${paramSlug}`);
}

const rendered = await collectionEntry.render();
const { Content } = rendered;

const postView: PostView = {
  title: collectionEntry.data.title,
  slug: collectionEntry.slug,
  excerpt: collectionEntry.data.description,
  category: collectionEntry.data.category,
  image: collectionEntry.data.image,
  publishDate: collectionEntry.data.pubDate,
  readTime: collectionEntry.data.readTime,
  author: collectionEntry.data.author,
};

// Related posts from Content Collections
const relatedPosts = collectionPosts
  .filter((p) => p.slug !== postView.slug)
  .filter((p) => p.data.category === postView.category || p.data.tags.some((t) => (postView.excerpt || '').toLowerCase().includes(t.toLowerCase())))
  .slice(0, 3)
  .map((p) => ({
    title: p.data.title,
    slug: p.slug,
    category: p.data.category,
    image: p.data.image,
    readTime: p.data.readTime,
    excerpt: p.data.description,
  }));

// JSON-LD dan Breadcrumb
const jsonLd = generateBlogPostSchema({
  title: postView.title,
  excerpt: postView.excerpt,
  image: postView.image,
  publishDate: (postView.publishDate instanceof Date) ? postView.publishDate.toISOString() : String(postView.publishDate),
  slug: postView.slug,
});

const breadcrumbs = [
  { name: 'Beranda', url: '/rajacuttinglaser/' },
  { name: 'Blog', url: '/rajacuttinglaser/blog/' },
  { name: postView.title, url: `/rajacuttinglaser/blog/${postView.slug}/` }
];
const breadcrumbSchema = generateBreadcrumbSchema(breadcrumbs);
---

<BaseLayout 
  title={`${postView.title} | Blog raja cutting laser`}
  description={postView.excerpt}
  keywords={`${postView.title.toLowerCase()}, laser cutting, cnc router, ${postView.category ? postView.category.toLowerCase() : ''}`}
  image={postView.image}
  type="article"
  jsonLd={[jsonLd, breadcrumbSchema]}
>
  <Header slot="header" />
  
  <!-- Article Header -->
  <article class="py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb -->
      <nav class="mb-8">
        <ol class="flex items-center space-x-2 text-sm text-gray-500">
          <li><a href="/rajacuttinglaser/" class="hover:text-blue-600">Beranda</a></li>
          <li>/</li>
          <li><a href="/rajacuttinglaser/blog/" class="hover:text-blue-600">Blog</a></li>
          <li>/</li>
          <li class="text-gray-900">{postView.title}</li>
        </ol>
      </nav>

      <!-- Article Meta -->
      <div class="mb-8">
        <div class="flex items-center space-x-4 mb-4">
          <span class="inline-block bg-blue-100 text-blue-800 text-sm px-3 py-1 rounded-full font-medium">
            {postView.category}
          </span>
          <span class="text-gray-500">{postView.readTime}</span>
          <span class="text-gray-500">
            {postView.publishDate && (new Date(postView.publishDate).toLocaleDateString('id-ID', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric' 
            }))}
          </span>
        </div>
        <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
          {postView.title}
        </h1>
        {postView.excerpt && (
          <p class="text-xl text-gray-600 leading-relaxed">
            {postView.excerpt}
          </p>
        )}
      </div>

      <!-- Featured Image -->
      {postView.image && (
        <div class="mb-12">
          <img 
            src={postView.image} 
            alt={postView.title}
            class="w-full h-96 object-cover rounded-lg shadow-lg"
            loading="eager"
          />
        </div>
      )}

      <!-- Article Content (from Markdown) -->
      <div class="prose prose-lg max-w-none">
        <Content />
      </div>

      <!-- CTA Section -->
      <div class="mt-12 p-8 bg-gradient-to-r from-blue-600 to-blue-700 rounded-lg text-white">
        <div class="text-center">
          <h3 class="text-2xl font-bold mb-4">
            Butuh Bantuan Implementasi?
          </h3>
          <p class="text-blue-100 mb-6">
            Tim ahli raja cutting laser siap membantu mewujudkan project Anda dengan teknologi terdepan
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href="https://api.whatsapp.com/send?phone=6285165693179&amp;text=Halo,%20saya%20tertarik%20dengan%20jasa%20laser%20cutting.%20Bisa%20konsultasi?"
              target="_blank"
              rel="noopener noreferrer"
              class="bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded-lg font-semibold transition-colors inline-flex items-center justify-center"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
              </svg>
              Konsultasi Gratis
            </a>
            <a 
              href="/rajacuttinglaser/contact/" 
              class="border-2 border-white text-white hover:bg-white hover:text-blue-700 px-6 py-3 rounded-lg font-semibold transition-colors"
            >
              Request Quote
            </a>
          </div>
        </div>
      </div>
    </div>
  </article>

  <!-- Related Posts -->
  {relatedPosts.length > 0 && (
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
          Artikel Terkait
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {relatedPosts.map((item) => (
            <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
              <img 
                src={item.image} 
                alt={item.title}
                class="w-full h-48 object-cover"
                loading="lazy"
              />
              <div class="p-6">
                <div class="flex items-center justify-between mb-3">
                  <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full font-medium">
                    {item.category}
                  </span>
                  <span class="text-sm text-gray-500">{item.readTime}</span>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-3">
                  <a href={`/blog/${item.slug}/`} class="hover:text-blue-600">
                    {item.title}
                  </a>
                </h3>
                <p class="text-gray-600 line-clamp-3">{item.excerpt}</p>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  )}

  <Footer slot="footer" />
</BaseLayout>