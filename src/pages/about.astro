        <div class="bg-white rounded-xl shadow-lg p-6 text-center hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
          <img 
            src="/images/Sari Dewi.webp"
            alt="Design Specialist LaserCut Pro"
            class="w-24 h-24 rounded-full mx-auto mb-4 object-cover border-4 border-purple-100"
            loading="lazy"
            width="96"
            height="96"
            onerror="this.onerror=null; this.src='/images/galvo.webp';"
          />
