---
// src/pages/jasa-galvo-30w.astro
import BaseLayout from '../components/BaseLayout.astro';
import { SERVICES } from '../utils/constants.js';

// Ambil data spesifik untuk Galvo 30 Watt dari pusat data
const service = SERVICES.find(s => s.id === 'galvo-30w');
---

<BaseLayout
  title={`${service.name} Presisi Tinggi di Bintaro BSD | Raja Metal Cutting`}
  description={service.description}
  keywords={`jasa ${service.name.toLowerCase()}, galvo laser bintaro, laser marking`}
>
  <!-- Hero Section -->
  <section class="relative py-20 bg-gradient-to-br from-charcoal via-charcoal/95 to-charcoal/90">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <nav class="text-sm text-metallic-silver mb-4" aria-label="Breadcrumb">
            <a href={import.meta.env.BASE_URL} class="hover:text-pure-white transition-colors">Beranda</a>
            <span class="mx-2">â€º</span>
            <span class="text-pure-white">{service.name}</span>
          </nav>

          <h1 class="text-4xl md:text-5xl font-bold text-pure-white mb-6 leading-tight">
            {service.name} Presisi Tinggi di Bintaro BSD
          </h1>
          <p class="text-xl text-metallic-silver mb-8 leading-relaxed">
            {service.description}
          </p>

          <div class="flex flex-col sm:flex-row gap-4">
            <a
              href={service.ctaLink1}
              target="_blank"
              rel="noopener noreferrer"
              class="bg-laser-red hover:bg-red-600 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 hover:scale-105 shadow-lg text-center"
              aria-label="{service.ctaButton1}"
            >
              {service.ctaButton1}
            </a>
            <a
              href={service.ctaLink2}
              class="border-2 border-pure-white text-pure-white hover:bg-pure-white hover:text-charcoal px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 text-center"
            >
              {service.ctaButton2}
            </a>
          </div>
        </div>

        <div class="relative">
          <img
            src={service.imageHero}
            alt={service.imageHeroAlt}
            class="w-full rounded-lg shadow-2xl"
            loading="eager"
          />
          <div class="absolute -bottom-4 -right-4 bg-laser-red text-white p-4 rounded-lg shadow-lg">
            <div class="text-2xl font-bold">30W</div>
            <div class="text-sm">Galvo Tech</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-20 bg-charcoal">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-pure-white mb-4">Keunggulan {service.name} Kami</h2>
        <p class="text-lg text-metallic-silver max-w-2xl mx-auto">{service.benefitsIntro}</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {service.benefits.map((b) => (
          <div class="text-center">
            <div class="w-16 h-16 bg-laser-red/20 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-laser-red" fill="currentColor" viewBox="0 0 24 24">{b.iconPath}</svg>
            </div>
            <h3 class="text-xl font-semibold text-pure-white mb-3">{b.title}</h3>
            <p class="text-metallic-silver">{b.text}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Applications Section -->
  <section class="py-20 bg-gradient-to-b from-charcoal to-charcoal/95">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-pure-white mb-4">Aplikasi {service.name}</h2>
        <p class="text-lg text-metallic-silver max-w-2xl mx-auto">{service.applicationsIntro}</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {service.applications.map((app) => (
          <div class="bg-charcoal border border-metallic-silver/20 rounded-lg p-6 text-center hover:border-laser-red/50 transition-all duration-300">
            <div class="w-12 h-12 bg-laser-red/20 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-laser-red" fill="currentColor" viewBox="0 0 24 24">{app.iconPath}</svg>
            </div>
            <h3 class="text-lg font-semibold text-pure-white mb-2">{app.title}</h3>
            <p class="text-metallic-silver text-sm">{app.text}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Gallery Section -->
  <section id="gallery" class="py-20 bg-charcoal">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-pure-white mb-4">Galeri {service.name}</h2>
        <p class="text-lg text-metallic-silver max-w-2xl mx-auto">{service.galleryIntro}</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {service.gallery.map((img) => (
          <div class="group">
            <div class="relative overflow-hidden rounded-lg">
              <img src={img.src} alt={img.alt} class="w-full h-64 object-cover transition-transform duration-300 group-hover:scale-110" loading="lazy" />
              <div class="absolute inset-0 bg-gradient-to-t from-charcoal/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <div class="absolute bottom-4 left-4 right-4">
                  <h3 class="text-lg font-semibold text-pure-white mb-1">{img.title}</h3>
                  <p class="text-metallic-silver text-sm">{img.caption}</p>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 bg-gradient-to-b from-charcoal/95 to-charcoal">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-pure-white mb-4">FAQ {service.name}</h2>
        <p class="text-lg text-metallic-silver max-w-2xl mx-auto">{service.faqIntro}</p>
      </div>
      <div class="max-w-3xl mx-auto space-y-4">
        {service.faq.map((f) => (
          <div class="bg-charcoal border border-metallic-silver/20 rounded-lg">
            <button class="w-full text-left p-6 focus:outline-none focus:ring-2 focus:ring-laser-red" onclick="toggleFAQ(this)">
              <div class="flex justify-between items-center">
                <h3 class="text-lg font-semibold text-pure-white">{f.question}</h3>
                <svg class="w-5 h-5 text-metallic-silver transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
              </div>
            </button>
            <div class="hidden px-6 pb-6">
              <p class="text-metallic-silver">{f.answer}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-laser-red to-red-600">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Siap Mulai Proyek {service.name}?</h2>
      <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">{service.ctaText}</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href={service.ctaLink1} target="_blank" rel="noopener noreferrer" class="bg-white text-laser-red hover:bg-gray-100 px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 hover:scale-105 shadow-lg min-w-[280px]" aria-label="{service.ctaButton1}">{service.ctaButton1}</a>
        <a href={service.ctaLink2} class="border-2 border-white text-white hover:bg-white hover:text-laser-red px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 min-w-[280px]">{service.ctaButton2}</a>
      </div>
    </div>
  </section>

  <script>
    function toggleFAQ(button) {
      const content = button.nextElementSibling;
      const icon = button.querySelector('svg');
      if (content.classList.contains('hidden')) {
        content.classList.remove('hidden');
        icon.style.transform = 'rotate(180deg)';
      } else {
        content.classList.add('hidden');
        icon.style.transform = 'rotate(0deg)';
      }
    }
  </script>
</BaseLayout>
